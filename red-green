<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Red Light Green Light Game</title>
  <style>
    body {
      text-align: center;
      font-family: 'Arial', sans-serif;
      background: #f0f0f0;
    }

    h1 {
      margin-top: 20px;
    }

    #light {
      font-size: 48px;
      font-weight: bold;
      margin: 20px;
    }

    #player {
      width: 50px;
      height: 50px;
      background: blue;
      border-radius: 50%;
      position: absolute;
      top: 200px;
      left: 50px;
      transition: left 0.3s ease;
    }

    #track {
      position: relative;
      width: 90%;
      height: 100px;
      margin: 40px auto;
      background: #ccc;
      border-radius: 10px;
    }

    #moveBtn {
      padding: 15px 30px;
      font-size: 20px;
      cursor: pointer;
      margin-top: 20px;
    }

    #status {
      font-size: 24px;
      margin-top: 10px;
      color: red;
    }
  </style>
</head>
<body>
  <h1>🦑 Squid Game: Red Light, Green Light</h1>
  <div id="light">🟢 Green Light</div>

  <div id="track">
    <div id="player"></div>
  </div>

  <button id="moveBtn">Move Forward</button>
  <div id="status"></div>

  <script>
    const light = document.getElementById('light');
    const player = document.getElementById('player');
    const statusText = document.getElementById('status');
    const moveBtn = document.getElementById('moveBtn');

    let currentLight = 'green';
    let position = 50;
    let gameOver = false;

    function toggleLight() {
      if (gameOver) return;

      currentLight = currentLight === 'green' ? 'red' : 'green';
      light.textContent = currentLight === 'green' ? '🟢 Green Light' : '🔴 Red Light';
      light.style.color = currentLight === 'green' ? 'green' : 'red';

      const time = Math.random() * 2000 + 1000;
      setTimeout(toggleLight, time);
    }

    function movePlayer() {
      if (gameOver) return;

      if (currentLight === 'red') {
        statusText.textContent = "❌ You moved on RED light. Game Over!";
        gameOver = true;
        moveBtn.disabled = true;
        return;
      }

      position += 50;
      player.style.left = position + 'px';

      if (position >= window.innerWidth - 100) {
        statusText.textContent = "✅ You Win!";
        gameOver = true;
        moveBtn.disabled = true;
      }
    }

    moveBtn.addEventListener('click', movePlayer);
    document.addEventListener('keydown', (e) => {
      if (e.key === ' ' || e.key === 'ArrowRight') movePlayer();
    });

    toggleLight();
  </script>
</body>
</html>
